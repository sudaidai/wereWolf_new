<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.werewolfs.wereWolfDev.activity.StartActivity">

    <data>
        <variable
            name="viewModel"
            type="com.example.werewolfs.wereWolfDev.viewModel.StartViewModel" />
    </data>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="狼人殺 - helper"
        android:textSize="20dp"></TextView>

    <Button
        android:id="@+id/btn_custom_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="自訂遊戲"></Button>


</LinearLayout>
</layout>